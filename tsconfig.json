{
	"compilerOptions": {
		"moduleResolution": "node",
		"rootDir": "src",
		"outDir": "dist",
		"sourceMap": true,
		"target": "esnext",
		"module": "commonjs",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"types": ["node"],
		"noImplicitAny": true,
		"allowJs": true
	},
	"include": [
		"src/**/*.ts",
		"prisma/*.ts", // if you seed in TypeScript
		"test/**/*.ts" // for your local tests
	],
	"exclude": ["node_modules", "dist"]
}
